<!DOCTYPE html>
<html lang="en">
	<head>
	   <%- include("partials/head"); %>
	</head>
	<body>
	   <div id="container">
		  <h1> Welcome </h1>
		  <% const red="red" %>
		  <p
		  <% if(sent) { %>
		  class="
		  <%= red %>
		  <% } %>
		  "><%= msg %></p>
		  <% if(loggedIn) { %>
			 <a href="/signout"> logout </a>
		  <% } else { %>
			<form id="login-form" action="/login" method="POST">
			   <fieldset>
				  <legend>Login</legend>
				  <div class="form-row">
					 <label for="name"> enter name </label>
					 <input
						type="text"
						name="name"
						pattern="^[a-zA-Z]+(?:\s[a-zA-Z]+)?$"
						placeholder="e.g. John Hancock"
						autocomplete="false"
					 />
					 <ul class="invalid-input">
						<li>Must contain at least two names (first and last).</li>
						<li>Must contain a space.</li>
					 </ul>
				  </div>
				  <button type="submit" class="btn"> Submit </button>
			   </fieldset>
			</form>
		  <% } %>
	   </div>
	   <script>
		  var exports = {};
	   </script>
	   <script data-main="../main.js" src="../require.js"></script>
	</body>
</html>
